@using uk.gov
@using Microsoft.AspNetCore.Html

@{
    var gridrow = GovTemplates.oneArgTemplate((arg1) =>
        @<div class="container-row">
            <div class="column-two-thirds">
                @arg1
            </div>
            <div class="column-one-third"></div>
        </div>);

    var gridrowTwothirds = GovTemplates.twoArgTemplate((arg1, arg2) => 
    @<div class="container-row">
            <div class="column-two-thirds">
                @arg1
            </div>
            <div class="column-one-third">
                @arg2
            </div>
    </div>);

    var h1 = GovTemplates.oneArgTemplate((text) => @<h1 class="heading-xlarge">@text</h1>);

    var p_lede = GovTemplates.oneArgTemplate((text) => @<p class="lede">@text</p>);
}

<div class="container-row">
    <div class="column-full">
        <h1 class="heading-xlarge">
            <span class="heading-secondary">GOV.UK</span>
            Register for a free frisbee
        </h1>
        <p class="lede">You know you wanna!</p>

        <h2 class="heading-large">
            About this page
        </h2>
        
        <p>
            Make sure you have to hand:
        </p>
        <ol class="list">
            <li>your national insurance number</li>
            <li>a valid <a href=#>proof of address</a></li>
            <li>a blood and stool sample</li>
        </ol>       

        <form action="~/Frisbee/Submit" method="POST">
            @*@if(Model.HasErrors) {*@
            <div class="error-summary" role="alert" aria-labelledby="error-summary-heading-example-1" tabindex="-1">
                <h2 class="heading-medium error-summary-heading" id="error-summary-heading-example-1">
                    There was a problem with the details provided
                </h2>
                <p>
                    Please check your answers below
                </p>
                <ul class="error-summary-list">
                    @* @foreach (var err in Model.AllErrors) { *@
                        <li><a href="#label-for-last_name">Your last name sounds dumb.</a></li>
                    @*}*@
                </ul>
            </div>
            @*}*@
            <div class="form-group">
                <label class="form-label"for="first_name" id="label-for-first_name"> 
                    <span class="form-label-bold">First name</span>
                    <span class="form-hint"></span>
                    <span class="error-message"></span>
                </label>
                <input class="form-control" type="text" name="first_name" id="first_name" value="">
            </div>
    
            <div class="form-group form-group-error">
                <label class="form-label"for="last_name" id="label-for-first_name">
                    <span class="form-label-bold">Last Name</span>
                    <span class="form-hint">What your school friends called you (if you went to a public school)</span>
                    <span class="error-message">That's not a real name!</span>
                </label>
                <input class="form-control" type="text" name="last_name" id="last_name" value="">
            </div>
    
            <input class="button" type="submit" value="Get goin'">
        </form>
    </div>
</div>
